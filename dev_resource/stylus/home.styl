@import "./base/base";
header
	position fixed
	top 0
	width 16rem
	height 2rem
	background-color rgb(36, 36, 36)
	.icon
		position absolute
		top .2rem
		&.back
			left @top
		&.option
			right @top
	h1
		margin-left 1rem
		margin-right 1rem
		overflow hidden
		text-align center
		white-space nowrap
		text-overflow ellipsis
		color white
		font-size 1rem
		line-height 2rem
body
	padding-top 2rem
	font-size 1rem
.banner
	position relative
	width 16rem
	height 8rem
	overflow hidden
	a
		position absolute
		display block
		left 16rem
		width @width
		height @height
		background-repeat no-repeat
		background-size 100% 100%
		&.previous
			animation previous .5s forwards
		&.current
			animation current .5s forwards
		&.init
			animation init .25s forwards
		&.ltr
			animation ltr .25s forwards
		&.rtl
			animation rtl .25s forwards
	.indicator
		position absolute
		bottom .5rem
		left 50%
		transform translateX(-50%)
		z-index 1
		em
			margin-right .2rem
			padding .04rem .24rem
			background-color rgb(0, 128, 255)
			color white
			font-size .6rem
			&.current
				background-color rgb(255, 128, 0)
@keyframes previous
	from
		left 0
	to
		left -16rem
@keyframes current
	from
		left 16rem
	to
		left 0
@keyframes init
	to
		left 0
@keyframes rtl
	to
		left -16rem
@keyframes ltr
	to
		left 16rem